@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Login" method="post" class="form-horizontal"  style="margin-top:5%">
    <div class="form-group row justify-content-center align-items-center">
        @Html.Label("InputGebruikersnaam", "Gebruikersnaam:", new { @class = "col-form-label col-form-label-lg mr-3" })
        <div>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
        </div>
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group row justify-content-center align-items-center">
        @Html.Label("InputPassword", "Wachtwoord:", new { @class = "col-form-label col-form-label-lg mr-5" })

        <div>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
        </div>
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>
    <br />
    <div class="form-group row justify-content-center align-items-center">
        <input type="submit" value="Login" class="btn btn-success col-sm-2" />
    </div>
</form>
@if (!string.IsNullOrEmpty(ViewBag.message))
{
    <p>@ViewBag.message</p>
}

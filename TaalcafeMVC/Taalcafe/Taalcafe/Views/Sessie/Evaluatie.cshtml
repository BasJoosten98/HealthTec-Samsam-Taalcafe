@model Taalcafe.Models.DB.Sessie
@{
    ViewData["Title"] = "Sessie evaluatie";
    
    int angryCount = 0;
    int neutralCount = 0;
    int happyCount = 0;

    foreach (var sp in Model.SessiePartners)
    {
        if (sp.CijferTaalcoach == 1) {
            angryCount += 1;
        }
        else if (sp.CijferTaalcoach == 2){
            neutralCount += 1;
        }
        else if (sp.CijferTaalcoach == 3){
            happyCount += 1;
        }

        if (sp.CijferCursist == 1) {
            angryCount += 1;
        }
        else if (sp.CijferCursist == 2){
            neutralCount += 1;
        }
        else if (sp.CijferCursist == 3){
            happyCount += 1;
        }
    }
            
}

@section scripts {
    <script src="~/lib/Chart.js/dist/Chart.bundle.js"></script>
    <script>
        // Visit https://www.chartjs.org/ for documentation on the library used for plotting graphs.
        // See https://www.chartjs.org/docs/latest/axes/labelling.html for custom labeling (probably needed).
        var ctx = document.getElementById('EvaluationChart');
        var EvaluationChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Angry', 'Neutral', 'Happy'],
                datasets: [{
                    data: [@angryCount, @neutralCount, @happyCount],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true,
                            precision: 0,
                        }
                    }]
                },
                legend: {
                    display: false
                }
            }
        });
    </script>
}

<div class="container-fluid">
    <div class="row">
        <h1><u>Dashboard evaluaties taalcaf√© sessie: @Model.Datum.Value.ToShortDateString() van @Model.Datum.Value.ToString("HH:mm") tot @Model.Datum.Value.Add(Model.Duur.Value).ToString("HH:mm"), thema: @Model.Thema.Naam </u></h1>
    </div>
    <div class="row">
        <div class="col-6">
            <div class="row">
                <h3>Beoordeling gesprekken</h3>
            </div>
            <div class="row">
                <canvas id="EvaluationChart" width="400" height="400"></canvas>
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <h3>Toelichting op beoordeling</h3>
            </div>
            <div class="row">
                <p><i>Selecteer een toelichting om naar de gebruiker te gaan.</i></p>
            </div>
            <div class="row">
                <ul class="list-group">
                    @foreach (var item in Model.SessiePartners)
                    {
                        if (item.FeedbackTaalcoach != null) {
                            <li class="list-group-item">
                                @Html.DisplayTextFor(modelItem => item.FeedbackTaalcoach)
                            </li>
                        }

                        if (item.FeedbackCursist != null) {
                            <li class="list-group-item">
                                @Html.DisplayTextFor(modelItem => item.FeedbackCursist)
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <h3>Sessie duo's</h3>
    </div>
    <div class="row">
        <ul class="list-group">
            <li class="list-group-item">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-4">
                            <b>Taalcoach</b>
                        </div>
                        <div class="col-4">
                            <b>Nieuwe Nederlander</b>
                        </div>
                    </div>
                </div>
            </li>
            @foreach (var item in Model.SessiePartners)
            {
                <li class="list-group-item">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-4">
                                @item.Taalcoach.Naam
                            </div>
                            <div class="col-4">
                                @item.Cursist.Naam
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
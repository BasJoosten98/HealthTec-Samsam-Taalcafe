@model Taalcafe.Models.ViewModels.CallSessionViewModel
@{
    ViewData["Title"] = "Call";
}

@section scripts {
    <script src="~/js/signalr/dist/browser/signalr.min.js"></script>
    <script type="text/javascript" src="~/js/call2.js"></script>
    <script>
        function getModel() {
            return @Html.Raw(Json.Serialize(@Model));
        }
    </script>
}


<div class="container-fluid bg-dark" style="height:75vh; overflow:hidden;">
    <div class="row">
        @*<div class="col-12">
            <input class="btn btn-secondary" id="recall" value="Recall" type="button" onclick="recall()" />
            <h2 id="call_title">Welcome to the new connectionhub!</h2>
        </div>*@
        <div class="col-8 p-0 m-0 bg-dark" style="height:75vh; overflow:hidden;">
            @*EVALUATION BOX*@
            <div id="EvaluationBox" class="row bg-white" hidden>
                <p>
                    Het videogesprek is afgesloten. Als het gesprek onverwachts afgesloten betekent dat dat iets verkeerd gegegaan is met de verbinding tussen u en uw partners.
                    Mogelijk is uw internet verbinding of die van uw partner weg gevallen. U kan hier wachten tot de verbinding herstelt, of het gesprek verlaten en doorgaan door op de knop hieronder te drukken.
                </p>
                <p>
                    Als u bewust het gesprek afgesloten heeft of als de sessie afgelopen is kan u het bericht hierboven negeren en doorgaan door op de knop hieronder te drukken.
                </p>
                <a asp-action="SessionEvaluation" class="btn btn-success" asp-route-sessionId="@Model.sessieId" asp-route-userId="@Model.gebruikerId">Doorgaan</a>
            </div>
            @*WEBCAMS*@
            <div id="webcams" class="row no-gutters">

            </div>
            @*TASK BAR*@
            <div id="taskbar" style="position:absolute; bottom:20px; left:0; right:0;">
                <div class="btn-toolbar" role="toolbar" aria-label="Controls">
                    <div class="m-auto">

                        <button type="button" id="muteButton" class="btn-lg bg-white mr-2" style="width:100px; overflow:hidden;" onclick="muteLocalSound()" disabled>
                            <i id="muteIcon" class="fas fa-microphone fa-2x"></i>
                            <i id="unmuteIcon" class="fas fa-microphone-slash fa-2x" hidden></i>
                        </button>
                        <button type="button" id="pauseButton" class="btn-lg bg-white mr-2" style="width:100px; overflow:hidden;" onclick="muteLocalVideo()" disabled>
                            <i id="pauseIcon" class="fas fa-video fa-2x"></i>
                            <i id="unpauseIcon" class="fas fa-video-slash fa-2x" hidden></i>
                        </button>
                        <button type="button" id="stopCallButton" class="btn-lg bg-danger mr-2" style="width:100px; overflow:hidden;" onclick="hangup()" disabled>
                            <i id="hangupIcon" class="fas fa-phone fa-2x "></i>
                        </button>
                        <button type="button" id="askHelpButton" class="btn-lg bg-warning" style="width:100px; overflow:hidden;" onclick="toggleHelp()" disabled>
                            <i id="askIcon" class="far fa-question-circle fa-2x"></i>
                            <i id="unaskIcon" class="fas fa-question-circle fa-2x" hidden></i>
                        </button>


                        @*<div class="btn-group mr-2" role="group" aria-label="Mute mic/webcam">
                        <input class="btn btn-secondary" id="muteButton" value="Demp microfoon" type="button" onclick="muteLocalSound()" disabled />
                        <input class="btn btn-secondary" id="pauseButton" value="Zet camera uit" type="button" onclick="muteLocalVideo()" disabled />
                    </div>
                    <div class="btn-group mr-2" role="group" aria-label="Call/Hang up">
                        <input class="btn btn-secondary" id="startCallButton" value="Start videogesprek" type="button" onclick="initiateCall()" disabled hidden />
                        <input class="btn btn-secondary" id="stopCallButton" value="Ophangen" type="button" onclick="hangup()" disabled />
                    </div>
                    <div class="btn-group" role="group" aria-label="Ask help">
                        <input class="btn btn-secondary" id="askHelpButton" value="Vraag om hulp" type="button" onclick="toggleHelp()" />
                    </div>*@
                    </div>
                </div>
            </div>
            @*INFORMATION PANEL*@
            <div id="informationpanel" class="border-5 border-danger bg-white p-2" style="position:absolute; left:5%; right:5%; top:10%;" hidden>
                <div class="border-bottom border-danger">
                    <h1 id="info_title">Title</h1>
                </div>
                <div class="border-bottom border-danger" style="overflow-y:auto;">
                    <p id="info_content" class="mb-2 mt-2">
                        Content
                    </p>
                </div>
                <div id="info_buttons" class="mb-2 mt-2">

                </div>
            </div>
        </div>
        @*RIGHT PANEL WITH THEMEBOX AND LOCALVIDEO*@
        <div id="rightpanel" class="col-4">
            <div id="themebox" class="row bg-white pt-3 pb-3" style="height:55vh; overflow:auto;">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12">
                            <h1 id="themetitle" style="text-align:center; color:orangered">@Html.DisplayName(Model.thema)</h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <p id="themedesc" style="text-align:center">
                                @Html.DisplayName(Model.beschrijving)
                            </p>
                        </div>
                    </div>
                    <hr />
                    @if (Model.Afbeeldingen.Count > 0)
                    {
                        <div class="row">
                            <div class="col-12">
                                @foreach (var item in Model.Afbeeldingen)
                                {
                                    <img src="@item" />
                                }
                            </div>
                        </div>
                        <hr />
                    }
                    <div class="row mt-3" style="max-height:30vh; overflow:auto;">
                        @foreach (var question in Model.Vragen)
                        {
                            <div class="col-1 align-self-center pr-0">
                                <input type="checkbox" id="@Html.DisplayFor(modelItem => question)">

                            </div>
                            <div class="col-11">
                                <label class="mt-0 mb-0" for="@Html.DisplayFor(modelItem => question)">@Html.DisplayFor(modelItem => question)</label>
                            </div>
                        }
                    </div>
                </div>

            </div>
            <div id="localvideobox" class="row justify-content-center bg-dark" style="height:20vh; overflow:hidden;">
                <video id="localVideo" autoplay muted poster="~/pics/def_user.png" style="height:100%; width:100%; object-fit:contain;"> </video>
            </div>
        </div>

    </div>
</div>


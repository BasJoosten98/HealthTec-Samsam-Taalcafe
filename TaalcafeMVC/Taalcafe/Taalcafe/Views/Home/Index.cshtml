@model AccountViewModel
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Login" method="post" class="align-items-center justify-content-center h-100">
    <div class="form-group row justify-content-center align-items-center">
        @Html.Label("InputGebruikersnaam", "Gebruikersnaam:", new { @class = "col-sm-2 col-form-label col-form-label-lg" })
        <div class="col-sm-4">
            @Html.EditorFor(model => model.Gebruikersnaam, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
        </div>
        @Html.ValidationMessageFor(model => model.Gebruikersnaam, "", new { @class = "text-danger" })
    </div>
    <div class="form-group row justify-content-center align-items-center">
        @Html.Label("InputPassword", "Password:", new { @class = "col-sm-2 col-form-label col-form-label-lg" })

        <div class="col-sm-4">
            @Html.EditorFor(model => model.Wachtwoord, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
        </div>
        @Html.ValidationMessageFor(model => model.Wachtwoord, "", new { @class = "text-danger" })
    </div>
    <div class="form-group row justify-content-center align-items-center">
        <input type="submit" value="Login" class="btn btn-success col-sm-2" />
        <div class="col-sm-4">
            <label for="gegevens" class="col-form-label-sm col-form-label-lg">Inloggegevens kwijt?</label>
        </div>
    </div>
</form>
@if (!string.IsNullOrEmpty(ViewBag.message))
{
    <p>@ViewBag.message</p>
}
